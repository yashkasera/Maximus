<resources>
    <!-- Base application theme. -->
    <style name="Theme.Maximus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9B4EF5</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A6FFFF</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#08010F</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="fontFamily">@font/outfit</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.Maximus.NavView">
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>