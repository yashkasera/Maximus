<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.craft404.maximus.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_chats"
        android:name="com.craft404.maximus.ui.chats.ChatsFragment"
        android:label="@string/title_chats"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_message"
        android:name="com.craft404.maximus.ui.notifications.NotificationsFragment"
        android:label="@string/title_message"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.craft404.maximus.ui.more.MoreFragment"
        android:label="@string/title_more"
        tools:layout="@layout/fragment_notifications" />
</navigation>